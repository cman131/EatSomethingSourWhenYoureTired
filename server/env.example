# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/mahjong-club
MONGODB_TEST_URI=mongodb://localhost:27017/mahjong-club-test

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# CORS
CLIENT_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# SMTP Configuration (for sending emails)
# Leave empty to use console logging fallback
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@mahjongclub.com
# Set to 'false' for development/testing with services like Mailtrap
SMTP_REJECT_UNAUTHORIZED=true

